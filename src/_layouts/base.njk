<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>		<link href="{{ '/assets/css/main.css' | url }}" rel="stylesheet">
		<style>
			.jumbotron {
				{%- set bg = image | default( metadata.image )-%}
	
				background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("{{ bg | url }}");

				/* Set a specific height */
				height: 50%;

				/* Position and center the image to scale nicely on all screens */
				background-position: 50% 25%;
				background-repeat: no-repeat;
				background-size: cover;
				position: relative;
				}
		</style>
	</head>
	<body class="bg-burgundy">
			<div class="container bg-white">
			{% include 'header.njk' %}

			<main role="main" class="container bg-white">
				<div class="row p-3 mt-3">
					<div class="col-md-8">
						<h2 class='text-muted'>{{title}}</h2>
						{{ content | safe }}
					</div>
					<aside class="col-md-4">
						<div class="position-sticky" style="top: 2rem;">
							
							<div class="p-3">
								{% include 'navigation.njk' %}
							</div>
							{# <div class="p-3">
